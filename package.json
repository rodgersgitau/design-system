{
  "name": "design-system",
  "version": "0.0.1",
  "private": true,
  "keywords": [
    "a11y",
    "component library",
    "design system"
  ],
  "homepage": "https://everdevs.github.io/design-system",
  "bugs": {
    "url": "https://github.com/everdevs/design-system/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/everdevs/design-system.git"
  },
  "license": "MIT",
  "author": {
    "name": "Gregor Adams",
    "email": "gregor.adams@evernest.com"
  },
  "workspaces": [
    "atomic-design/atoms/*",
    "atomic-design/ions/*",
    "atomic-design/molecules/*",
    "atomic-design/organisms/*",
    "atomic-design/templates/*",
    "utils/*"
  ],
  "scripts": {
    "add-component": "babel-node bin/add-component.ts --extensions='.ts'",
    "bootstrap": "lerna bootstrap",
    "prebuild": "yarn clean && yarn setup:build",
    "build": "lerna run build --stream",
    "#prebuild:storybook": "yarn test:generate-output",
    "build:storybook": "build-storybook -c .storybook -o storybook-static/ -s ./public",
    "clean": "lerna run clean",
    "clean:gh-pages": "rimraf node_modules/gh-pages/.cache node_modules/.cache/gh-pages",
    "predeploy": "yarn clean:gh-pages && yarn build:storybook",
    "deploy": "gh-pages -d storybook-static/",
    "predev": "yarn setup",
    "dev": "yarn storybook",
    "postinstall": "babel-node bin/fix-husky.ts --extensions='.ts'",
    "lint": "yarn stylelint",
    "ncu": "ncu -u; yarn lerna exec 'ncu -u -x \"/^@evernest/.*$/\"'",
    "ncu:minor": "ncu -t minor -u; yarn lerna exec 'ncu -t minor -u -x \"/^@evernest/.*$/\"'",
    "prettier": "prettier 'atomic-design/{atoms,ions,molecules,organisms}/**/*.[jt]s(x)?' 'utils/**/*.[jt]s(x)?'",
    "prettier:tsconfig": "prettier '**/tsconfig.json' --write",
    "prepublish": "yarn build",
    "refresh": "rimraf node_modules '**/node_modules' yarn.lock && yarn install",
    "prerelease": "yarn build",
    "release": "lerna publish --conventional-commits",
    "run:bin": "lerna run bin",
    "setup": "babel-node init.ts --extensions='.ts' && yarn run:bin",
    "setup:build": "babel-node init.ts --extensions='.ts' --build && yarn run:bin",
    "snapshot": "yarn build:storybook && dotenv percy-storybook --widths=320,640,960,1280",
    "spj": "sort-package-json; lerna exec sort-package-json && prettier '**/package.json' --write",
    "#prestorybook": "yarn test:generate-output",
    "storybook": "start-storybook -p 3000 -s ./public",
    "stylelint": "stylelint '**/*.{ts,tsx}'",
    "#pretest": "yarn setup && yarn lint",
    "#test": "jest --coverage",
    "#pretest:generate-output": "yarn setup",
    "#test:generate-output": "jest --json --outputFile=.jest-testresults.json",
    "#test:update": "lerna run test:update --parallel",
    "#test:watch": "lerna run test:watch --parallel",
    "xo": "xo"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "last 2 android versions",
    "last 2 edge versions",
    "last 2 chrome versions",
    "last 2 firefox versions",
    "last 2 ios versions",
    "last 2 safari versions"
  ],
  "resolutions": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4"
  },
  "dependencies": {
    "@babel/core": "^7.14.3",
    "@babel/node": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@commitlint/config-lerna-scopes": "^12.1.4",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/core": "^11.0.0",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@percy/storybook": "^3.3.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@storybook/addon-a11y": "^6.3.0-beta.2",
    "@storybook/addon-actions": "^6.3.0-beta.2",
    "@storybook/addon-essentials": "^6.3.0-beta.2",
    "@storybook/addon-backgrounds": "^6.3.0-beta.2",
    "@storybook/addon-docs": "^6.3.0-beta.2",
    "@storybook/addon-info": "^6.0.0-alpha.2",
    "@storybook/addon-jest": "^6.3.0-beta.2",
    "@storybook/addon-knobs": "^6.3.0-next.2",
    "@storybook/addon-links": "^6.3.0-beta.2",
    "@storybook/addon-viewport": "^6.3.0-beta.2",
    "@storybook/addons": "^6.3.0-beta.2",
    "@storybook/builder-webpack5": "^6.3.0-beta.2",
    "@storybook/cli": "^6.3.0-beta.2",
    "@storybook/manager-webpack5": "^6.3.0-beta.2",
